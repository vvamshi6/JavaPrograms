import com.bridgelabz.Utility;
import com.bridgelabz.StopWatch;
public class UtilityCallin{
	public static void main(String[] args){
		Utility u = new Utility();
		StopWatch sw = new StopWatch();

		//creating array of integers and words
		System.out.println("Enter your number");
		int size = u.inputNumber();
		int[] numbers = u.input1DArray(size);
		String[] words = u.input1DStringArray(size);
		
		//starting stopwatch and calling bubbleSort method
		System.out.println("Bubble Sort for Strings");
		sw.start();
		String[] sortedwords = u.bubbleSort(words);
		//stopping stop watch when yes entered on keyboard		
		System.out.println("press yes if u want to stop");
		String option = u.inputString();
		if(option.equals("yes"))
		sw.stop();
		System.out.println((sw.elapsedTime()/1000)+" secs");
		//starting stopwatch and calling bubbleSort method

		System.out.print("Bubble Sort For Numbers");
		sw.start();
		int[] sortednums = u.bubbleSort(numbers);
		//stopping stop watch when yes entered on keyboard		
		System.out.println("press yes if u want to stop");
		option = u.inputString();
		if(option.equals("yes"))
		sw.stop();
		System.out.println((sw.elapsedTime()/1000)+" Secs");
		
		System.out.println("Insertion Sort for words");
		sw.start();
		String[] inserwords = u.insertionSort(words);
		//stopping stop watch when yes entered on keyboard		
		System.out.println("press yes if u want to stop");
		option = u.inputString();
		if(option.equals("yes"))
		sw.stop();
		System.out.println((sw.elapsedTime()/1000)+" secs");
		
		System.out.println("Insertion sort for integers");
		sw.start();
		int[] insernums = u.insertionSort(numbers);
		//stopping stop watch when yes entered on keyboard		
		System.out.println("press yes if u want to stop");
		option = u.inputString();
		if(option.equals("yes"))	
		sw.stop();
		System.out.println((sw.elapsedTime()/1000)+" secs");
		
		System.out.println("Binary Search for integers");
		sw.start();
		System.out.println("Enter no to find in array");
		int key = u.inputNumber();
		int result = u.binarySearch(sortednums,key);
		//stopping stop watch when yes entered on keyboard		
		System.out.println("press yes if u want to stop");
		option = u.inputString();
		if(option.equals("yes"))
		sw.stop();
		System.out.println((sw.elapsedTime()/1000)+" secs");

		System.out.println("Binary Search for Strings");
		sw.start();
		System.out.println("Enter string to find in array");
		String strkey = u.inputString();
		int res = u.binarySearch(sortedwords,strkey);
		//stopping stop watch when yes entered on keyboard		
		System.out.println("press yes if u want to stop");
		option = u.inputString();
		if(option.equals("yes"))
		sw.stop();
		System.out.println((sw.elapsedTime()/1000)+" secs");	
	}
}
